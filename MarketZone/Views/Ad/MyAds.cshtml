@model IEnumerable<MarketZone.ViewModels.Ad.MyAdViewModel>

@{
    ViewData["Title"] = "My Ads";
}

<h2>My Ads</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You have not posted any ads yet.
    </div>
}
else
{
    <div class="row">
        @foreach (var ad in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(ad.MainImageUrl))
                    {
                        <img src="@ad.MainImageUrl"
                             class="card-img-top"
                             style="height:200px;object-fit:cover;" />
                    }

                    <div class="card-body">
                        <h5 class="card-title">@ad.Title</h5>

                        <p class="card-text text-primary fw-bold">
                            @ad.Price
                            @(ad.Currency == MarketZone.Data.Enums.Currency.EUR ? "€" : "$")
                        </p>

                        <p class="text-muted">
                            Posted on @ad.CreatedOn.ToString("dd MMM yyyy")
                        </p>
                    </div>

                    <div class="card-footer bg-white d-flex gap-2">
                        <!-- View -->
                        <a asp-controller="Ad"
                           asp-action="Details"
                           asp-route-id="@ad.Id"
                           class="btn btn-sm btn-outline-primary">
                            View
                        </a>

                        <!-- Edit -->
                        <a asp-controller="Ad"
                           asp-action="Edit"
                           asp-route-id="@ad.Id"
                           class="btn btn-sm btn-outline-secondary">
                            Edit
                        </a>

                        <!-- Delete (POST only, logic later) -->
                        <form asp-controller="Ad"
                              asp-action="Delete"
                              asp-route-id="@ad.Id"
                              method="post"
                              class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                    class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('Are you sure you want to delete this ad?');">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}

@using MarketZone.Data.Models
@using Microsoft.AspNetCore.Identity
@using MarketZone.Common
@using MarketZone.Infrastructure.Identity

@inject SignInManager<User> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item d-flex align-items-center">
            <a class="nav-link text-dark d-flex align-items-center"
               asp-area="Identity"
               asp-page="/Account/Manage/Index"
               title="Manage account">

                <img src="@(User.FindFirst(AppUserClaimsPrincipalFactory.ProfilePictureUrlClaimType)?.Value
                                  ?? AppConstants.DefaultAvatarUrl)"
                     onerror="this.onerror=null;this.src='@AppConstants.DefaultAvatarUrl';"
                     class="rounded-circle me-2"
                     style="width:40px;height:40px;object-fit:cover;flex-shrink:0;" />

                <span>@User.Identity!.Name</span>
            </a>
        </li>

        <li class="nav-item">
            <form asp-area="Identity"
                  asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                  method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark"
               asp-area="Identity"
               asp-page="/Account/Register">
                Register
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark"
               asp-area="Identity"
               asp-page="/Account/Login">
                Login
            </a>
        </li>
    }
</ul>